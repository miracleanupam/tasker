<div class="task-wrapper_header">
  <nav class="navbar navbar-fixed-top navbar-expand-lg bg-light">

    <div class="container-fluid">

      <%= link_to "TASKER", root_path, class: "navbar-brand" %>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ms-auto">
          <% if user_is_signed_in? && current_user.admin? %>
            <%= render 'layouts/invite_form' %>
          <% end %>
          <% if user_is_signed_in? %>
            <li><%= link_to "Sign Out", signout_path, data: { turbo_method: :delete } %></li>
          <% else %>
            <li><%= link_to "Sign In", signin_path %></li>
          <% end %>
        </ul>
      </div>

    </div>

  </nav>
</div>
